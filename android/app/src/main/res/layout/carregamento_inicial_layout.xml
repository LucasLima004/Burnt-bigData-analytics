<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/principal_1">
    <TextView
        android:id="@+id/tvNomeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vector"
        android:textSize="@dimen/texto_enorme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/em_principal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenha uma boa viagem"
        android:textColor="@color/em_principal"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeApp"
        app:layout_constraintLeft_toLeftOf="@+id/tvNomeApp"
        app:layout_constraintRight_toRightOf="@id/tvNomeApp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
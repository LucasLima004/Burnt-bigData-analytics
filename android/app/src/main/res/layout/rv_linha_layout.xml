<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/principal_2"
    android:padding="@dimen/padding_padrao">
    <ImageView
        android:id="@+id/ivIconeLinha"
        android:layout_width="@dimen/icone_padrao"
        android:layout_height="@dimen/icone_padrao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvNomeLinha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/texto_pequeno"
        app:layout_constraintLeft_toRightOf="@id/ivIconeLinha"
        app:layout_constraintTop_toTopOf="@id/ivIconeLinha"
        android:text="@string/estacao"
        android:layout_marginLeft="@dimen/padding_padrao"
        android:textColor="@color/em_principal"
        />
</androidx.constraintlayout.widget.ConstraintLayout>